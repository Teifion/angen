{
  "$id": "types/lobby/full_lobby.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Extended lobby",
  "description": "Lobby details for members of the lobby",
  "type": "object",
  "required": [
    "id",
    "host_id",
    "name"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "host_id": {
      "type": "string"
    },
    "host": {
      "$ref": "types/account/user.json"
    },
    "host_data": {
      "type": "object"
    },
    "name": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "settings": {
      "type": "object"
    },
    "passworded?": {
      "type": "boolean"
    },
    "locked?": {
      "type": "boolean"
    },
    "public?": {
      "type": "boolean"
    },
    "match_type": {
      "type": "string"
    },
    "rated?": {
      "type": "boolean"
    },
    "game_name": {
      "type": "string"
    },
    "game_version": {
      "type": "string"
    },
    "players": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "spectators": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}