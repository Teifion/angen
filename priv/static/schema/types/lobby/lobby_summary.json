{
  "$id": "types/lobby/lobby_summary.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Partial lobby",
  "description": "A limited representation of a lobby for things like lobby lists",
  "type": "object",
  "required": [
    "id",
    "host_id",
    "name"
  ],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "host_id": {
      "type": "string",
      "format": "uuid"
    },
    "name": {
      "type": "string"
    },
    "tags": {
      "type": "array"
    },
    "match_ongoing?": {
      "type": "boolean"
    },
    "passworded?": {
      "type": "boolean"
    },
    "locked?": {
      "type": "boolean"
    },
    "public?": {
      "type": "boolean"
    },
    "rated?": {
      "type": "boolean"
    },
    "game_name": {
      "type": ["string", "null"]
    },
    "game_version": {
      "type": ["string", "null"]
    },
    "player_count": {
      "type": "integer"
    },
    "spectator_count": {
      "type": "integer"
    }
  }
}