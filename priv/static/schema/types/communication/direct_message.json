{
  "$id": "types/communication/direct_message.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Direct Message",
  "description": "A direct message",
  "type": "object",
  "required": [
    "sender_id",
    "to_id",
    "content",
    "inserted_at"
  ],
  "properties": {
    "sender_id": {
      "type": "string",
      "format": "uuid"
    },
    "to_id": {
      "type": "string",
      "format": "uuid"
    },
    "content": {
      "type": "string"
    },
    "inserted_at": {
      "type": "string"
    }
  }
}