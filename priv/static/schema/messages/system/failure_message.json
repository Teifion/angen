{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "system/failure_message.json",
  "title": "Failure message",
  "description": "A message sent when a command failed",
  "type": "object",
  "properties": {
    "command": {
      "type": "string"
    },
    "reason": {
      "type": "string"
    }
  },
  "required": ["command", "reason"]
}