{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "response.json",
  "title": "Response",
  "description": "A server message wrapping a response",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "enum": [
        "__system__",
        "error",
        "failure",
        "success",
        "pong",

        "__account__",
        "registered",
        "auth_token",
        "logged_in",
        "user_info",

        "__communication__",
        "received_direct_message",
        "received_room_message",
        "received_lobby_message",
        "received_party_message",

        "__connection__",
        "youare"
      ]
    },
    "message": {
      "type": "object"
    },
    "message_id": {
      "description": "If the request had an ID it should be mirrored here",
      "type": "string"
    }
  },
  "required": [
    "message",
    "name"
  ]
}